{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "importHelpers": false,
    "module": "CommonJS",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "es2020",
    "esModuleInterop": true,
    "types": [
      "node",
      "reflect-metadata"
    ]
  },
  "include": [
    "src/**/*",
    "tests"
  ],
  "exclude": [
    "node_modules",
    "tests/*"
  ]
}